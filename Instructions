ðŸ”¥ PHASE 2: BACKEND - GEMINI AI â†’ N8N CONVERSION ENGINE
backend/app/services/gemini_service.py
python"""
Google Gemini 2.0 Flash Integration
Converts natural language to N8N workflow structure
"""

import os
import json
from typing import Dict, List, Any
import google.generativeai as genai
from pydantic import BaseModel

class WorkflowNode(BaseModel):
    id: str
    name: str
    type: str
    parameters: Dict[str, Any]
    position: List[int]

class WorkflowEdge(BaseModel):
    source: str
    target: str
    type: str = "main"

class N8NWorkflow(BaseModel):
    name: str
    nodes: List[WorkflowNode]
    connections: Dict[str, Any]
    settings: Dict[str, str] = {"executionOrder": "v1"}
    staticData: None = None
    tags: List[str] = []

class GeminiWorkflowGenerator:
    def __init__(self):
        genai.configure(api_key=os.getenv("GEMINI_API_KEY"))
        self.model = genai.GenerativeModel('gemini-2.0-flash-exp')
        
        # System instruction for N8N workflow generation
        self.system_instruction = """You are an expert N8N workflow architect.
        Convert user descriptions into valid N8N workflow JSON structures.
        
        Rules:
        1. Always start with a Trigger node (webhook, schedule, or manual)
        2. Each node must have: id, name, type, parameters, position [x, y]
        3. Node types must be valid N8N nodes: webhook, httpRequest, function, if, switch, set, merge, code
        4. Connections format: {"NodeName": {"main": [[{"node": "NextNode", "type": "main", "index": 0}]]}}
        5. Position nodes horizontally: [250*index, 300]
        6. Include error handling nodes when appropriate
        
        Node Type Mappings:
        - "webhook trigger" â†’ n8n-nodes-base.webhook
        - "http request" â†’ n8n-nodes-base.httpRequest
        - "code/function" â†’ n8n-nodes-base.code
        - "condition/if" â†’ n8n-nodes-base.if
        - "switch/router" â†’ n8n-nodes-base.switch
        - "zendesk" â†’ n8n-nodes-base.zendesk
        - "slack" â†’ n8n-nodes-base.slack
        - "email" â†’ n8n-nodes-base.emailSend
        - "database" â†’ n8n-nodes-base.postgres
        - "schedule" â†’ n8n-nodes-base.scheduleTrigger
        
        Return ONLY valid JSON matching this structure:
        {
          "name": "Workflow Name",
          "description": "What this workflow does",
          "nodes": [...],
          "connections": {...},
          "tags": ["tag1", "tag2"],
          "steps": [
            {
              "stepNumber": 1,
              "title": "Step Title",
              "description": "What happens in this step",
              "nodeId": "node-1",
              "learningTip": "Why this step is important"
            }
          ]
        }
        """

    async def generate_workflow(self, user_prompt: str) -> Dict[str, Any]:
        """
        Convert natural language prompt to N8N workflow
        
        Args:
            user_prompt: User's workflow description
            
        Returns:
            Complete N8N workflow structure with educational steps
        """
        try:
            # Enhanced prompt with examples
            enhanced_prompt = f"""
            User Request: {user_prompt}
            
            Generate a complete N8N workflow for this request.
            Include:
            1. All necessary nodes with correct parameters
            2. Proper connections between nodes
            3. Educational steps explaining each part
            4. Learning tips for the user
            5. Credentials needed (if any)
            
            Example for "Create a chatbot that responds to webhooks":
            {{
              "name": "Simple Chatbot Workflow",
              "description": "Responds to webhook messages with AI-generated replies",
              "nodes": [
                {{
                  "id": "webhook-trigger",
                  "name": "Webhook Trigger",
                  "type": "n8n-nodes-base.webhook",
                  "parameters": {{
                    "path": "chatbot",
                    "responseMode": "responseNode",
                    "httpMethod": "POST"
                  }},
                  "position": [250, 300]
                }},
                {{
                  "id": "process-message",
                  "name": "Process Message",
                  "type": "n8n-nodes-base.code",
                  "parameters": {{
                    "jsCode": "const message = $input.item.json.message;\\nreturn [{{ json: {{ reply: 'You said: ' + message }} }}];"
                  }},
                  "position": [500, 300]
                }},
                {{
                  "id": "respond",
                  "name": "Send Response",
                  "type": "n8n-nodes-base.respondToWebhook",
                  "parameters": {{}},
                  "position": [750, 300]
                }}
              ],
              "connections": {{
                "Webhook Trigger": {{
                  "main": [[{{"node": "Process Message", "type": "main", "index": 0}}]]
                }},
                "Process Message": {{
                  "main": [[{{"node": "Send Response", "type": "main", "index": 0}}]]
                }}
              }},
              "tags": ["chatbot", "webhook", "automation"],
              "steps": [
                {{
                  "stepNumber": 1,
                  "title": "Receive Messages",
                  "description": "Webhook listens for incoming messages at /webhook/chatbot",
                  "nodeId": "webhook-trigger",
                  "learningTip": "Webhooks are the entry point for real-time data"
                }},
                {{
                  "stepNumber": 2,
                  "title": "Process & Respond",
                  "description": "Code node processes the message and generates a reply",
                  "nodeId": "process-message",
                  "learningTip": "Code nodes let you write custom JavaScript logic"
                }},
                {{
                  "stepNumber": 3,
                  "title": "Send Back Response",
                  "description": "Returns the reply to the original webhook caller",
                  "nodeId": "respond",
                  "learningTip": "Always close the webhook loop with a response"
                }}
              ],
              "credentials": [
                {{
                  "name": "No credentials needed",
                  "reason": "This is a simple webhook workflow"
                }}
              ],
              "estimatedSetupTime": "2 minutes"
            }}
            
            Now generate for: {user_prompt}
            """
            
            # Generate with Gemini
            response = self.model.generate_content(enhanced_prompt)
            
            # Parse JSON response
            workflow_json = self._extract_json(response.text)
            
            # Validate and enhance
            validated_workflow = self._validate_workflow(workflow_json)
            
            return validated_workflow
            
        except Exception as e:
            print(f"Gemini generation error: {str(e)}")
            return self._generate_fallback_workflow(user_prompt)

    def _extract_json(self, text: str) -> Dict:
        """Extract JSON from Gemini response (handles markdown code blocks)"""
        try:
            # Remove markdown code blocks
            if "```json" in text:
                text = text.split("```json")[1].split("```")[0]
            elif "```" in text:
                text = text.split("```")[1].split("```")[0]
            
            return json.loads(text.strip())
        except json.JSONDecodeError as e:
            print(f"JSON parse error: {e}")
            # Try to fix common issues
            text = text.replace("'", '"')  # Single to double quotes
            return json.loads(text.strip())

    def _validate_workflow(self, workflow: Dict) -> Dict:
        """Validate and fix workflow structure"""
        
        # Ensure required fields
        if "name" not in workflow:
            workflow["name"] = "Generated Workflow"
        
        if "nodes" not in workflow or not workflow["nodes"]:
            raise ValueError("Workflow must have at least one node")
        
        # Add missing node fields
        for i, node in enumerate(workflow["nodes"]):
            if "id" not in node:
                node["id"] = f"node-{i+1}"
            if "position" not in node:
                node["position"] = [250 + (i * 250), 300]
            if "parameters" not in node:
                node["parameters"] = {}
        
        # Generate connections if missing
        if "connections" not in workflow or not workflow["connections"]:
            workflow["connections"] = self._auto_generate_connections(workflow["nodes"])
        
        # Add metadata
        workflow["createdAt"] = None
        workflow["updatedAt"] = None
        workflow["versionId"] = None
        
        return workflow

    def _auto_generate_connections(self, nodes: List[Dict]) -> Dict:
        """Auto-generate linear connections between nodes"""
        connections = {}
        
        for i in range(len(nodes) - 1):
            current_node = nodes[i]["name"]
            next_node = nodes[i + 1]["name"]
            
            connections[current_node] = {
                "main": [[{
                    "node": next_node,
                    "type": "main",
                    "index": 0
                }]]
            }
        
        return connections

    def _generate_fallback_workflow(self, prompt: str) -> Dict:
        """Generate a basic workflow if Gemini fails"""
        return {
            "name": "Basic Workflow",
            "description": f"Workflow for: {prompt}",
            "nodes": [
                {
                    "id": "manual-trigger",
                    "name": "Manual Trigger",
                    "type": "n8n-nodes-base.manualTrigger",
                    "parameters": {},
                    "position": [250, 300]
                },
                {
                    "id": "code-node",
                    "name": "Process Data",
                    "type": "n8n-nodes-base.code",
                    "parameters": {
                        "jsCode": "// Add your logic here\nreturn $input.all();"
                    },
                    "position": [500, 300]
                }
            ],
            "connections": {
                "Manual Trigger": {
                    "main": [[{"node": "Process Data", "type": "main", "index": 0}]]
                }
            },
            "tags": ["generated", "basic"],
            "steps": [
                {
                    "stepNumber": 1,
                    "title": "Start Workflow",
                    "description": "Manual trigger to start the workflow",
                    "nodeId": "manual-trigger",
                    "learningTip": "Use manual triggers for testing"
                },
                {
                    "stepNumber": 2,
                    "title": "Custom Logic",
                    "description": "Add your custom processing logic here",
                    "nodeId": "code-node",
                    "learningTip": "Code nodes provide maximum flexibility"
                }
            ]
        }

# Initialize service
gemini_service = GeminiWorkflowGenerator()

