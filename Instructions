            value={userPrompt}
            onChange={(e) => setUserPrompt(e.target.value)}
          />
          <div className="flex justify-end mt-4">
            <button
              type="submit"
              disabled={isGenerating}
              className="inline-flex items-center gap-2 px-5 py-3 rounded-xl bg-primary-yellow text-neutral-darkest font-semibold shadow-glow hover:shadow-glow-strong hover:bg-primary-yellow-hover transition-all disabled:opacity-50 disabled:cursor-not-allowed"
            >
              <Send className="w-4 h-4" />
