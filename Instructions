Path: frontend/src/components/workflow/ChatInterface.tsx

import React, { useState, useRef, useEffect } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import {
  Send,
  Settings,
  Download,
  PlayCircle,
  KeyRound,
  AlertTriangle,
  Bot,
  Workflow
} from 'lucide-react';

// Types for workflow response from backend
type WorkflowStep = {
  stepNumber: number;
  title: string;
  description: string;
  nodeId: string;
  learningTip: string;
};

type CredentialHint = {
  name: string;
  reason: string;
};

type GeneratedWorkflow = {
  name: string;
  description: string;
  nodes: any[];
  connections: Record<string, any>;
  steps: WorkflowStep[];
  credentials?: CredentialHint[];
};

interface ChatInterfaceProps {
  onExportToN8N?: (data: GeneratedWorkflow) => void;
  // optional prop to hook download / POST to n8n
}

const ChatInterface: React.FC<ChatInterfaceProps> = ({ onExportToN8N }) => {
  const [userPrompt, setUserPrompt] = useState('');
  const [isGenerating, setIsGenerating] = useState(false);
  const [workflow, setWorkflow] = useState<GeneratedWorkflow | null>(null);

  const bottomRef = useRef<HTMLDivElement | null>(null);

  // Auto-scroll to bottom when workflow updates
  useEffect(() => {
    if (bottomRef.current) {
      bottomRef.current.scrollIntoView({ behavior: 'smooth' });
    }
  }, [workflow, isGenerating]);

  // Simulate calling backend FastAPI /chat -> Gemini -> n8n JSON
  // In production:
  // const res = await axios.post('/api/chat/generate-workflow', { prompt: userPrompt });
  // setWorkflow(res.data)
  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    if (!userPrompt.trim()) return;

    setIsGenerating(true);
    setWorkflow(null);

    // FAKE DEMO PAYLOAD (replace with backend response)
    // This matches the shape your FastAPI gemini_service.generate_workflow() returns
    setTimeout(() => {
      const demoWorkflow: GeneratedWorkflow = {
        name: "Zendesk â†’ AI Summary â†’ Slack Alert",
        description:
          "When a new Zendesk ticket is created, generate an AI summary and post it to Slack.",
        nodes: [
          {
            id: "node-1",
