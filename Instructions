      - N8N_PORT=5678
      - N8N_PROTOCOL=http
      - WEBHOOK_URL=http://localhost:5678/
      
      # Disable Auth (internal use)
      - N8N_BASIC_AUTH_ACTIVE=false
      
      # Database Config
      - DB_TYPE=postgresdb
      - DB_POSTGRESDB_HOST=postgres
      - DB_POSTGRESDB_PORT=5432
      - DB_POSTGRESDB_DATABASE=n8n_db
      - DB_POSTGRESDB_USER=automation_user
      - DB_POSTGRESDB_PASSWORD=SecurePass123!
      
      # Execution Config
      - EXECUTIONS_MODE=queue
      - QUEUE_BULL_REDIS_HOST=redis
      - QUEUE_BULL_REDIS_PORT=6379
      - EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
      - EXECUTIONS_DATA_SAVE_ON_ERROR=all
      - EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true
      
      # Timezone
      - GENERIC_TIMEZONE=Europe/Vienna
      
      # Metrics
      - N8N_METRICS=true
      - N8N_METRICS_PREFIX=n8n_
      
      # Security
      - N8N_ENCRYPTION_KEY=your-n8n-encryption-key-min-10-chars
    volumes:
      - n8n_data:/home/node/.n8n
      - ./n8n-custom/workflows:/home/node/.n8n/workflows
    depends_on:
