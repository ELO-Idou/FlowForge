              operation: "newTicket",
              subdomain: "your-team",
            },
            position: [250, 300],
          },
          {
            id: "node-2",
            name: "Summarize Ticket (Gemini)",
            type: "n8n-nodes-base.code",
            parameters: {
              jsCode:
                "// call Gemini 2.0 Flash API to summarize ticket\n// return { summary }",
            },
            position: [500, 300],
          },
          {
            id: "node-3",
            name: "Post to Slack",
            type: "n8n-nodes-base.slack",
            parameters: {
              channel: "#support-alerts",
              text: "New ticket summary attached...",
            },
            position: [750, 300],
          },
        ],
        connections: {
          "Zendesk Trigger": {
            main: [[{ node: "Summarize Ticket (Gemini)", type: "main", index: 0 }]],
          },
          "Summarize Ticket (Gemini)": {
            main: [[{ node: "Post to Slack", type: "main", index: 0 }]],
          },
        },
        steps: [
          {
            stepNumber: 1,
            title: "Listen for new Zendesk tickets",
            description:
              "This node triggers whenever a new customer ticket is created.",
            nodeId: "node-1",
            learningTip:
              "This replaces manual inbox checking and speeds up response time.",
          },
          {
            stepNumber: 2,
            title: "Generate AI summary",
            description:
              "We send the ticket content to Gemini 2.0 Flash to create a short summary.",
            nodeId: "node-2",
            learningTip:
              "Agents don't have to read huge walls of text, they get signal instantly.",
          },
          {
            stepNumber: 3,
            title: "Send alert to Slack",
            description:
              "We notify the support channel with the summary, priority, and customer context.",
            nodeId: "node-3",
            learningTip:
              "This keeps the whole team aligned without opening Zendesk.",
          },
        ],
        credentials: [
          {
            name: "Zendesk API Key",
            reason: "Needed to read new tickets from your helpdesk",
          },
          {
            name: "Slack Bot Token",
            reason: "Required to post messages into your Slack channel",
          },
          {
            name: "Gemini API Key",
            reason: "Used to summarize the ticket content using AI",
          },
        ],
      };

      setWorkflow(demoWorkflow);
      setIsGenerating(false);
    }, 1200);
  };

  const handleExport = () => {
    if (workflow && onExportToN8N) {
      onExportToN8N(workflow);
    }
    // You can also trigger download of workflow JSON here
    // const blob = new Blob([JSON.stringify(workflow, null, 2)], { type: "application/json" });
    // const url = URL.createObjectURL(blob);
    // create <a download="workflow.json"> ...
  };

  return (
    <div className="min-h-screen bg-neutral-darkest text-white flex flex-col">
