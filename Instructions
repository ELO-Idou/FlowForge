frontend/src/components/landing/Features.tsx
typescriptimport React from 'react';
import { motion } from 'framer-motion';
import { Bot, Zap, BarChart3, Shield, Code, Workflow } from 'lucide-react';

const features = [
  {
    icon: Bot,
    title: 'AI-Powered Generation',
    description: 'Describe your workflow in plain English. Our AI transforms it into a complete N8N workflow instantly.',
    color: 'bg-semantic-info',
    gradient: 'from-semantic-info to-blue-600'
  },
