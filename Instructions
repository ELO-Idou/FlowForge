                <Workflow className="w-5 h-5 text-primary-yellow" />
                Process Steps
              </h3>

              <div className="space-y-6">
                <AnimatePresence>
                  {workflow.steps.map((step) => (
                    <motion.div
                      key={step.stepNumber}
